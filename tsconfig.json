{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "types": ["cypress"]
  },
  "exclude": ["node_modules", "./cypress/*/**.ts"],
  "include": ["src/**/*", "next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "files": ["./node_modules/redux-persist/types/integration/react.d.ts"]
}
